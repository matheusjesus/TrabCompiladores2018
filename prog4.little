PROGRAM p04
BEGIN
  --funcao fibonacci
  FUNCTION VOID fib ( INT num ) BEGIN
    INT aux, i, a, b;
    STRING coma := ", ";

    a:= 0;
    b:= 1;
    WRITE(b);
    WRITE(coma);

    FOR(i:= 0; i < num ; i := i + 1)
       aux := a + b;
       a := b;
       b := aux;
       WRITE(aux);

       IF (i > num - 1) THEN
         WRITE(coma);
       ENDIF

       IF (i < num - 1) THEN
         WRITE(coma);
       ENDIF

    ENDFOR
  END

  --funcao main
  FUNCTION VOID main ( ) BEGIN
    STRING comeco := "Escolha uma opcao: -1. Media de dois numeros -2. Fibonacci ";
    STRING error := "Opcao invalida";
    STRING numero1 := "Digite o primeiro numero: ";
    STRING numero2 := "Digite o segundo numero: ";
    INT num, opc;
    FLOAT num2, num3, result;

    WRITE ( comeco );
    READ ( opc );

    IF ( opc = 1 ) THEN
        WRITE( numero1 );
        READ ( num2 );
        WRITE( numero2 );
        READ ( num3 );
        result := (num2 + num3) / 2;
        WRITE ( result );
    ELSE
        IF ( opc = 2 ) THEN
            READ ( num );
            fib ( num );
        ELSE
            WRITE( error );
        ENDIF
    ENDIF
  END

END
