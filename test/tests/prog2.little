PROGRAM p02
BEGIN
  FUNCTION VOID main ( ) BEGIN
    STRING comeco := "Insira seu peso e altura: ";
    STRING imc_alto := ": Seu IMC esta acima do ideal";
    STRING imc_baixo := ": Seu IMC esta abaixo do ideal";
    STRING imc_ideal := ": Seu IMC esta no padroes normais";
    INT flag;
    FLOAT peso, altura, altura_quad, imc;

    flag := 0;

    WRITE ( comeco );
    READ ( peso, altura );

    altura_quad := altura * altura;
    imc := peso / altura_quad;

    IF ( imc > 25) THEN
      WRITE ( imc_alto );
    ELSE
      IF ( imc < 18) THEN
        WRITE ( imc_baixo );
      ELSE
        WRITE ( imc_ideal );
      ENDIF
    ENDIF
  END
END
